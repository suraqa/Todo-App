    <!-- CSS -->
    <link rel="stylesheet" href="../assets/styles.css">
</head>

<body>
    <div class="container pt-5">
        <p class="text-center mb-5 display-1 text-white">Todo App</p>
        <div class="todo-body">
            <div class="row justify-content-center pb-5">
                <div class="col-6">
                    <form action="/todo" method="post">
                        <div class="row">
                            <div class="col-9">
                                <input type="text" name="todo" class="form-control p-3" placeholder="Enter a Todo"
                                    required>
                            </div>
                            <div class="col-3">
                                <button type="submit" class="w-100 btn btn-md btn-outline-primary">Add</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-6">
                    <ul class="list-group">


                        <% for (let key in todo) { %>
                            
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <%= todo[key].item %>
                                <button data-delete-btn class="btn btn-md btn-outline-primary">Delete</button>
                            </li>
                                    
                        <% } %>
                            

          




                    </ul>

                </div>
            </div>
        </div>

    </div>
